SUFFIX   = gfortran_serial

FC       = gfortran -c
LD       = gfortran
DEBUG    =
FCFLAGS  = -O3 -pedantic -fexternal-blas $(DEBUG)
LDFLAGS  = -static-libgfortran $(DEBUG)
NUMLIB   = -llapack -lblas

CC       = gcc -c
CCFLAGS  =

# linker for C-interoperable library (gcc & gfortran)
LIBLD    = gcc
LIBFLAGS = -shared
LIBLIB   = -lgfortran

AR       = ar
ARFLAGS  = -crUusv

include ./Makefile.inc
